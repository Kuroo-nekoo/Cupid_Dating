<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
        android:background="#FFE0E0"
        >

    <com.final_mad.datingapp.datingapp.customfonts.TextViewSemiBold
        android:id="@+id/numberOfPagesLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="24dp"
        android:gravity="right"

        android:text="2/5"
        android:textColor="#747474"
        android:textSize="24sp"
        android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/logo" />

            <com.final_mad.datingapp.datingapp.customfonts.TextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
                android:text="Love Dating"
                android:textColor="#B3404A"
                android:textSize="24dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <com.final_mad.datingapp.datingapp.customfonts.TextViewBold
                android:id="@+id/getStartedTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="130dp"
                android:layout_marginRight="24dp"
                android:text="Please choose your gender"
                android:textColor="#EB7676"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.final_mad.datingapp.datingapp.customfonts.ButtonSemiBold
                    android:id="@+id/maleSelectionButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_white_text_red"
                    android:elevation="24dp"
                    android:padding="18dp"
                    android:text="MALE"
                    android:textColor="#A52222"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.final_mad.datingapp.datingapp.customfonts.ButtonSemiBold
                    android:id="@+id/femaleSelectionButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="24dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_white_text_red"
                    android:elevation="24dp"
                    android:padding="18dp"
                    android:text="FEMALE"
                    android:textColor="#A52222"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <com.final_mad.datingapp.datingapp.customfonts.ButtonSemiBold
                android:id="@+id/genderContinueButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/btn_red_gradient_text_white"
                android:elevation="24dp"
                android:padding="15dp"
                android:text="Continue"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.final_mad.datingapp.datingapp.customfonts.TextViewSemiBold
                android:id="@+id/tvLinkLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp"
                android:gravity="center"
                android:text="Already have account? Login"
                android:textColor="#EB7676"
                android:textSize="16dp" />

        </LinearLayout>

</RelativeLayout>
</ScrollView>
