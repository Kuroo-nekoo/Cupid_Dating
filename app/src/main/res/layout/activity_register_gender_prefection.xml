<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE0E0"
    android:orientation="vertical">

    <com.final_mad.datingapp.datingapp.customfonts.TextViewSemiBold
        android:id="@+id/numberOfPagesLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="24dp"
        android:layout_marginTop="@dimen/_10dp"
        android:gravity="right"
        android:text="3/5"
        android:textColor="#777777"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/logo" />

        <com.final_mad.datingapp.datingapp.customfonts.TextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:text="Love Dating"
            android:textColor="#B3404A"
            android:textSize="24dp"
            android:textStyle="bold" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/getStartedTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="270dp"
            android:text="Intrested in:"
            android:textColor="#EB7676"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.final_mad.datingapp.datingapp.customfonts.ButtonSemiBold
                android:id="@+id/maleSelectionButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:background="@drawable/btn_white_text_red"
                android:elevation="24dp"
                android:layout_marginRight="8dp"
                android:text="MALE"
                android:padding="18dp"
                android:textColor="#A52222"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.final_mad.datingapp.datingapp.customfonts.ButtonSemiBold
                android:id="@+id/femaleSelectionButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="24dp"
                android:layout_weight="1"
                android:background="@drawable/btn_white_text_red"
                android:elevation="24dp"
                android:text="FEMALE"
                android:padding="18dp"
                android:textColor="#A52222"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <com.final_mad.datingapp.datingapp.customfonts.ButtonSemiBold
            android:id="@+id/preferenceContinueButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/btn_red_gradient_text_white"
            android:elevation="24dp"
            android:text="Continue"
            android:textSize="20sp"
            android:padding="15dp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <com.final_mad.datingapp.datingapp.customfonts.TextViewSemiBold
            android:id="@+id/tvLinkLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:text="Already have account? Login"
            android:textColor="#EB7676"
            android:textSize="16dp" />
    </LinearLayout>

</RelativeLayout>